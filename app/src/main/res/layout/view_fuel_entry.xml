
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
        android:id="@+id/fuel_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTxtQuantity"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Quantity"
            android:layout_above="@+id/fuel_quantity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            />

        <TextView
        android:id="@+id/fuel_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:textSize="18sp"
        android:text="15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        />

        <TextView
        android:id="@+id/fuel_filling_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fuel_quantity"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="2015-20-02"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        />

        <TextView
        android:id="@+id/fuel_amount"
        android:layout_toRightOf="@id/fuel_filling_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:textSize="18sp"
        android:text="500"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        />
    </LinearLayout>

</LinearLayout>